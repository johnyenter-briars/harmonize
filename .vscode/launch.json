{
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/harmonize",
            "python": "${command:python.interpreterPath}",
            "args": [
                "main:app",
                "--reload",
                "--debug",
                "--host",
                "127.0.0.1"
            ],
            "jinja": true
        }
    ]
}