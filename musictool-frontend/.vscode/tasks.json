{
  // For more information, visit: https://go.microsoft.com/fwlink/?LinkId=733558
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "type": "npm",
      "script": "test",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "label": "Run Development",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "dependsOrder": "parallel",
      "dependsOn": [
        "api-dev",
        "frontend-dev"
      ]
    },
    {
      "label": "api-dev",
      "type": "shell",
      "command": "fastapi dev",
      "presentation": {
        "panel": "dedicated"
      }
    },
    {
      "label": "frontend-dev",
      "type": "shell",
      "command": "cd musictool-frontend; npx ng serve",
      "presentation": {
        "panel": "dedicated"
      }
    },
  ]
}