<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Harmonize.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Harmonize"
    xmlns:view="clr-namespace:Harmonize.Page.View"
    Shell.FlyoutBehavior="Flyout"
    Shell.BackgroundColor="{StaticResource PrimaryDark}"
    FlyoutBackgroundColor="{StaticResource PrimaryDark}"
    Shell.FlyoutWidth="250"
    Title="Harmonize">

    <FlyoutItem 
                Title="Main Page" 
                Icon="icons8_home_50.png"
                >
        <Tab>
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem 
                Title="Settings" 
                Icon="icons8_automatic_50.png"
                >
        <Tab>
            <ShellContent
                Title="Settings"
                ContentTemplate="{DataTemplate view:SettingsPage}"
                Route="Settings" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem 
                Title="MediaElement" 
                Icon="icons8_music_note_50.png"
                >
        <Tab>
            <ShellContent
                Title="MediaElementPage"
                ContentTemplate="{DataTemplate view:MediaElementPage}"
                Route="Settings" />
        </Tab>
    </FlyoutItem>

</Shell>
