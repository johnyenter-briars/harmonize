<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="ListElementRoot"
             x:Class="Harmonize.Components.ListElement">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Frame 
                Margin="5"
                Padding="{Binding CustomPadding, Source={x:Reference Name=ListElementRoot}}" 
                HasShadow="True" 
                CornerRadius="5" 
                BackgroundColor="{StaticResource Gray600}">
                <ContentPresenter />
            </Frame>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>

