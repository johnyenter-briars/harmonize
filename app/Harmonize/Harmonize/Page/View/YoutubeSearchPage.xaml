<?xml version="1.0" encoding="utf-8" ?>
<pages:BasePage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Harmonize.Page.View"
    xmlns:pages="clr-namespace:Harmonize.Page"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewModels="clr-namespace:Harmonize.ViewModel"
    x:TypeArguments="viewModels:YouTubeSearchViewModel"
    x:DataType="viewModels:YouTubeSearchViewModel"
    x:Class="Harmonize.Page.View.YouTubeSearchPage"
    xmlns:youtube="clr-namespace:Harmonize.Client.Model.Youtube;assembly=Harmonize.Client"
    Title="YouTube Search">

    <Grid Padding="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <SearchBar 
            Grid.Row="0"
            Placeholder="Search YouTube"
            SearchCommand="{Binding SearchCommand}"
            SearchCommandParameter="{Binding ., Source={x:Reference searchBar}}"
            Text="{Binding SearchQuery}" 
            FontSize="18"
            HeightRequest="40"
            VerticalOptions="Start"
            HorizontalOptions="FillAndExpand"
            x:Name="searchBar"
            />

        <ActivityIndicator
            Grid.Row="1" 
            IsVisible="{Binding FetchingData}"
            IsRunning="{Binding FetchingData}"
            Color="{StaticResource Primary}"
            Scale="0.7"
        />

        <ListView 
            Grid.Row="1" 
            ItemsSource="{Binding SearchResults}"
            VerticalOptions="FillAndExpand"
            RowHeight="150"
            ItemTapped="OnItemTapped"
            SeparatorVisibility="None"
            ItemSelected="OnItemSelected"
            >
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="youtube:YouTubeSearchResult">
                    <ViewCell>
                        <Grid>
                            <Frame
                                Margin="5"
                                Padding="10" 
                                HasShadow="True" 
                                CornerRadius="5" 
                                BackgroundColor="{StaticResource Gray600}">
                                <Grid
                                    RowDefinitions="Auto, Auto"
                                    ColumnDefinitions="*, *"
                                    >
                                    <Label 
                                        Grid.Row="0"
                                        Grid.ColumnSpan="2"
                                        Text="{Binding Title}" 
                                        FontAttributes="Bold"
                                        MaxLines="2"
                                        />

                                    <Image 
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Source="{Binding Thumbnails[0].Url}" 
                                        HeightRequest="75"/>

                                    <StackLayout 
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Orientation="Vertical" 
                                        Padding="10,0,0,0">
                                        <BoxView
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            HeightRequest="1" Color="{StaticResource Gray400}"/>
                                        <Label 
                                            Text="{Binding Channel.Name}" 
                                            TextColor="{StaticResource Gray300}"
                                            FontSize="Small" 
                                            />
                                        <Label 
                                            TextColor="{StaticResource Gray300}"
                                            Text="{Binding Duration}" 
                                            FontSize="Small" 
                                            />
                                        <Label 
                                            TextColor="{StaticResource Gray300}"
                                            Text="{Binding PublishedTime}" 
                                            FontSize="Small" 
                                            />
                                    </StackLayout>
                                </Grid>
                            </Frame>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</pages:BasePage>

