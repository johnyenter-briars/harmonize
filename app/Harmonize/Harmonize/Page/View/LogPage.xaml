<?xml version="1.0" encoding="utf-8" ?>
<pages:BasePage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Harmonize.Page.View"
             xmlns:pages="clr-namespace:Harmonize.Page"
             x:Class="Harmonize.Page.View.LogPage"
             xmlns:viewModels="clr-namespace:Harmonize.ViewModel"
             x:TypeArguments="viewModels:LogViewModel"
             x:DataType="viewModels:LogViewModel"
             Title="Log Page">
  <ScrollView>
        <StackLayout>
            <Editor 
                Text="{Binding LogText}" 
                FontSize="10"
                x:Name="logEntry" 
                IsReadOnly="True" 
                VerticalOptions="FillAndExpand" 
                />
            
        </StackLayout>
    </ScrollView>
</pages:BasePage>